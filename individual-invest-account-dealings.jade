extends assets/jade/layouts/global/index
block header
	include assets/jade/layouts/global/partials/header-menu
block content



	.content-section
		.content-section__inner
			.section-title Информация по сделкам ИИС

	.content-section.bg-darker
		.borderedVert.marginTop40
			.form-grid.bordered.borderedVertFree
				.cell
					.content-section__inner
						.tile-iconed.styleInline
							.icon
								img(src='/assets/img/icon-calendar-blue.png')
							.text
								.prop Выбрать период:
								a(href='#' class='value').link-text-small.value
									| 5 янв 2016 - 30 июл 2016

	.content-section
		.content-section__inner.content-section--padding.padding-bottom-0
			.form-row
				label.form-row__title
					| Выберите параметр для отображения:
				select.form-control
					option Цена
					option Стоимость
					option Сумма



	.content-section
		- for(var item = 0; item < rulerIIAPortfolioDealings.length; ++item) {
			+rulerListed({
				'title': rulerIIAPortfolioDealings[item]['title'],
				'titleClass': rulerIIAPortfolioDealings[item]['titleClass'],
				'rulerListInline': rulerIIAPortfolioDealings[item]['rulerListInline'],
				'listTabled': rulerIIAPortfolioDealings[item]['list'],
				'button': rulerIIAPortfolioDealings[item]['button'],
			})
		- }




	.content-section
		.content-section__inner
			+btnBlock({
				'left': 'icon-mail.png',
				'title': 'Сформировать отчет и отправить на email',
			})







	include assets/jade/partials/request-to-open-pif
	include assets/jade/partials/outgoing-link
	include assets/jade/partials/privacy-policy

block body_end
	script(type='text/javascript' src='assets/js/vendors/parsley.js')
	script(type='text/javascript' src='assets/js/vendors/bootstrap-modal.js')
	script(type='text/javascript' src='assets/js/main.js')
	script(type='text/javascript').
		$(function () {
			commonActions.init();
		})